<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="WinLogin.WinAdmin"
        Title="Генератор билетов" Height="400" Width="600         " WindowStartupLocation="CenterScreen" Icon="bookcase.png" ResizeMode="NoResize" Loaded="Window_Loaded">
    <Grid Background="{DynamicResource {x:Static SystemColors.InactiveCaptionBrushKey}}" Margin="-4,2,-2,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="224*"/>
            <RowDefinition Height="auto" MinHeight="56"/>
            <RowDefinition Height="19*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="0" Grid.Row="0"  VerticalAlignment="Top" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}" Foreground="#FFF3F5F7" FontSize="16" Margin="0,-3,0,0" RenderTransformOrigin="0.5,0.5" FontWeight="Bold" Padding="35,10,0,10" Height="40" >
               Администратор
        </TextBlock>

        <ToolBar Grid.Row="1" HorizontalAlignment="Left" Width="240" Background="#FFBFCDDB" MinWidth="240" Margin="10,0,0,0">
            <Button x:Name="Add_Teacher" Content="Добавить" Click="Add_Teacher_Click" Background="#FF9AE6BC" MinWidth="70"/>
            <Button x:Name="Save_Teacher" Content="Сохранить" Click="Save_Teacher_Click" Background="#FFF3E979" MinWidth="70"/>
            <Button x:Name="Del_Teacher" Content="Удалить" Click="Del_Teacher_Click" Background="#FFEE7373" MinWidth="70"/>
        </ToolBar>

        <DataGrid x:Name="dataGrid_teachers" Grid.Row="2" RowDetailsVisibilityMode="VisibleWhenSelected"  EnableRowVirtualization="True" AutoGenerateColumns="False" SelectionMode="Single" IsTextSearchEnabled="True" IsReadOnly="True" Margin="20,0,19,0" Background="#FFE2E9F0" >
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="id_teacher_dg" Header="Id" Binding="{Binding id_teacher}" Width="40"/>
                <DataGridTextColumn x:Name="name_tch_dg" Header="ФИО преподавателя" Binding="{Binding name_tch}" Width="200"/>
                <DataGridTextColumn x:Name="login_tch_dg" Header="Логин" Binding="{Binding login_tch}" Width="150"/>
                <DataGridTextColumn x:Name="password_tch_dg" Header="Пароль" Binding="{Binding password_tch}" Width="*"/>              
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="3" Margin="20,8,19,4" DataContext="{Binding ElementName=spr_kategoryDataGrid, Path=SelectedItem}">
            <TextBox BorderThickness="1" BorderBrush="DarkCyan"  Text="{Binding id_teacher, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Background="#FFE2E9F0"/>
            <TextBox BorderThickness="1" BorderBrush="DarkCyan"  Text="{Binding name_tch, UpdateSourceTrigger=PropertyChanged}" Background="#FFE2E9F0"/>
        <TextBox BorderThickness="1" BorderBrush="DarkCyan"  Text="{Binding login_tch, UpdateSourceTrigger=PropertyChanged}" Background="#FFE2E9F0"/>
            <TextBox BorderThickness="1" BorderBrush="DarkCyan"  Text="{Binding password_tch, UpdateSourceTrigger=PropertyChanged}" Background="#FFE2E9F0"/>                 
        </StackPanel>
        <TextBox x:Name="Search_cat" HorizontalAlignment="Left" Height="23" Margin="255,2,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="326" TextChanged="TextBox_TextChanged" Grid.Row="1"/>
    </Grid>
</Window>
