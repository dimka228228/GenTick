<Window x:Class="WinLogin.WinStudent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Генератор билетов" Height="450" Width="525" WindowStartupLocation="CenterScreen" Icon="bookcase.png" ResizeMode="NoResize">
    <Grid Background="{DynamicResource {x:Static SystemColors.InactiveCaptionBrushKey}}" Margin="0,-1,-6,1">
        <Grid.RowDefinitions>
            <RowDefinition Height="50*" ></RowDefinition>
            <RowDefinition Height="40*" ></RowDefinition>
            <RowDefinition Height="40*" ></RowDefinition>
            <RowDefinition Height="40*" ></RowDefinition>
            <RowDefinition Height="40*" ></RowDefinition>
            <RowDefinition Height="40*" ></RowDefinition>
            <RowDefinition Height="40*" ></RowDefinition>
            <RowDefinition Height="40*" ></RowDefinition>
            <RowDefinition Height="40*" ></RowDefinition>
            <RowDefinition Height="40*" ></RowDefinition>
            <RowDefinition Height="40*" ></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"></ColumnDefinition>
            <ColumnDefinition Width="88*"/>
            <ColumnDefinition Width="437*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0" Grid.Row="0"  VerticalAlignment="Top" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}" Foreground="#FFF3F5F7" FontSize="16" Margin="0,0,0,0" RenderTransformOrigin="0.5,0.5" FontWeight="Bold" Padding="30,10,0,10" Height="40" Grid.ColumnSpan="3" >
               Студент
        </TextBlock>

        <Label Name="labelFIO" Content="ФИО:" Grid.Column="1" Grid.Row="1" Margin="30,8,0,0" Height="30" VerticalAlignment="Top"/>
        <Label Name="labelGroup" Content="Группа:" Grid.Column="1" HorizontalAlignment="Left" Margin="30,6,0,0" Grid.Row="2" VerticalAlignment="Top" Height="26" Width="61" Grid.ColumnSpan="2"/>
        <TextBox Name="textBoxFIO" Text="Иванов Иван Иванович" Grid.Column="2" HorizontalAlignment="Left" Height="23" Margin="10,7,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="199" IsReadOnlyCaretVisible="True"/>
        <TextBox Name="textBoxGroup" Text="51" Grid.Column="2" HorizontalAlignment="Left" Height="23" Margin="10,7,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="199" IsReadOnlyCaretVisible="True"/>
        <TextBox Name="textBoxSubject" Text="Информатика" Grid.Column="2" HorizontalAlignment="Left" Height="23" Margin="10,7,0,0" Grid.Row="3" TextWrapping="Wrap" VerticalAlignment="Top" Width="199" IsReadOnlyCaretVisible="True"/>
        <Label Name="labelSubject" Content="Предмет:" Grid.Column="1" HorizontalAlignment="Left" Margin="30,5,0,0" Grid.Row="3" VerticalAlignment="Top" Height="26" Width="61" Grid.ColumnSpan="2"/>
        <Button Name="buttonExit" Content="Закрыть" Grid.Column="2" HorizontalAlignment="Left" Margin="335,5,0,0" Grid.Row="10" VerticalAlignment="Top" Width="72" Height="22" Click="buttonExit_Click"/>


    </Grid>
</Window>
